{
	"name": "ui",
	"version": "0.0.1",
	"scripts": {
		"prepare": "svelte-kit sync",
		"dev": "svelte-package --watch",
		"dev:vite": "bun use-bun vite dev",
		"build": "bun run buildAndPackage",
		"build:vite": "bun use-bun vite build",
		"buildAndPackage": "bun run build:vite && bun run package",
		"preview": "bun use-bun vite preview",
		"package": "bun run prepare && svelte-package && publint",
		"prepublishOnly": "bun run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "bun run test:integration && bun run test:unit",
		"test:integration": "playwright test",
		"test:unit": "bun test",
		"use-bun": "bun -b --env-file=../../.env"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0-next.1"
	},
	"devDependencies": {
		"@playwright/test": "^1.43.1",
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.7",
		"@sveltejs/package": "^2.3.1",
		"@types/eslint": "^8.56.10",
		"@typescript-eslint/eslint-plugin": "^7.8.0",
		"@typescript-eslint/parser": "^7.8.0",
		"autoprefixer": "^10.4.16",
		"eslint": "^9.1.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.38.0",
		"postcss": "^8.4.32",
		"postcss-load-config": "^5.0.2",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"publint": "^0.2.7",
		"svelte": "^5.0.0-next.120",
		"svelte-check": "^3.7.0",
		"tailwindcss": "^3.3.6",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.10"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"bits-ui": "^0.21.7",
		"clsx": "^2.1.1",
		"tailwind-merge": "^2.3.0",
		"tailwind-variants": "^0.2.1"
	}
}